<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".HazirTestDetay">
    <RelativeLayout
        android:id="@+id/prgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/siyah_transp_buton"
        android:gravity="center"
        android:elevation="20dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="30dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/beyaz_kutucuk"
        android:padding="25dp"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:text="@string/sinav_icerigi_de"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="20dp"></ListView>


    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hemen_coz_de"
        android:background="@drawable/siyah_kutucuk"
        android:textColor="#ffffff"
        android:layout_margin="25dp"/>



</LinearLayout>