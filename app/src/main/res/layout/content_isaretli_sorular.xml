<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".IsaretliSorular"
    tools:showIn="@layout/app_bar_isaretli_sorular"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/prgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/siyah_transp_buton"
        android:elevation="20dp"
        android:gravity="center"
        android:visibility="gone">



        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="30dp"
            android:visibility="gone" />
    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/beyaz_kutucuk"
        android:layout_margin="20dp"
        android:padding="20dp">
        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="30dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/daha_once_isaretlediginiz_sorular_de"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/siyah_kutucuk"
            android:padding="15dp"
            android:text="@string/title_isaretli_sorular_de"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>